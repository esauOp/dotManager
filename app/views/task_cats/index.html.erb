
<div class="catalogo tabla-striped">
	<table class="table table-striped">
		<thead>
			<tr>
				<th><%= @task_cats.human_attribute_name(:id) %></th>
				<th><%= @task_cats.human_attribute_name(:name) %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>		
		<% @task_cats.each do |category| %>
			<tr>
				<td><%= link_to category.id, task_cat_path(category) %></td>
				<td><%= category.name %></td>
				<td>
					<div class="btn-group btn-group-xs">
						<%= link_to 'Edit', edit_task_cat_path(category), :class => "btn btn-info" %>
						<%= link_to 'Destroy', task_cat_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => "btn btn-danger" %>
					</div>
				</td>
			</tr>		
		<%end%>
		</tbody>
	</table>
</div>

<%= link_to 'New Category', new_task_cat_path, :class => "btn btn-info" %>
