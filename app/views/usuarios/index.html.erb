
<div class="catalogo tabla-striped">
<div class="row header">
	<div class="col-md-1"><%= @usuarios.human_attribute_name(:id) %></div>
	<div class="col-md-1"><%= @usuarios.human_attribute_name(:name) %></div>
	<div class="col-md-1"><%= @usuarios.human_attribute_name(:last_name) %></div>
	<div class="col-md-4"><%= @usuarios.human_attribute_name(:email) %></div>
	<div class="col-md-1"><%= @usuarios.human_attribute_name(:admin) %></div>
	<div class="col-md-1">Edit</div>
	<div class="col-md-1">Delete</div>
</div>

<% @usuarios.each do |user| %>
	<div class="row">
		<div class="col-md-1"><%= link_to user.id, team_path(user) %></div>
		<div class="col-md-1"><%= user.name %></div>
		<div class="col-md-1"><%= user.last_name %></div>
		<div class="col-md-4"><%= user.email %></div>
		<div class="col-md-1"><%= check_box_tag user.id, user.admin, user.admin %></div>
		<div class="col-md-1"><%= link_to '.edit', edit_team_path(user) %></div>
		<div class="col-md-1"><%= link_to '.destroy', team_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></div>
	</div>
	
<%end%>
</div>
