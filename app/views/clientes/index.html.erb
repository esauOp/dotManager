
<div class="catalogo tabla-striped">			 
	<table class="table table-striped">
		<thead>
			<tr>
				<th><%= @clientes.human_attribute_name(:id) %></th>
				<th><%= @clientes.human_attribute_name(:name) %></th>
				<th><%= @clientes.human_attribute_name(:adress) %></th>
				<th><%= @clientes.human_attribute_name(:city) %></th>
				<th><%= @clientes.human_attribute_name(:state) %></th>
				<th><%= @clientes.human_attribute_name(:zip) %></th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>		
		<% @clientes.each do |client| %>
			<tr>
				<td><%= link_to client.id, cliente_path(client) %></td>
				<td><%= client.name %></td>
				<td><%= client.adress %></td>
				<td><%= client.city %></td>
				<td><%= client.state %></td>
				<td><%= client.zip %></td>
				<td><%= link_to '.edit', edit_cliente_path(client) %></td>
				<td><%= link_to '.destroy', cliente_path(client), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></td>
			</tr>		
		<%end%>
		</tbody>
	</table>
</div>

<div class="row">
		<div class="col-md-4">			
			<%= link_to 'Nuevo', new_cliente_path %>
		</div>
	</div>
