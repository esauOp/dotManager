
<div class="catalogo ">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @task_priorities.each do |task_priority| %>
      <tr>
        <td><%= task_priority.name %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <%= link_to 'Edit', edit_task_priority_path(task_priority), :class => "btn btn-info" %>
            <%= link_to 'Destroy', task_priority, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => "btn btn-danger" %>
          </div>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'New Task priority', new_task_priority_path, :class => "btn btn-info" %>
