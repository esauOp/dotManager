
<div class="panel panel-default">
	<div class="panel-heading">Details</div>
		<table class="table">
			<tbody>
				<tr>
					<td><%= @task.id %></td>
					<td><%= @task.name %></td>
					<td><%= @task.estimated_time %></td>
					<td><%= @task.description %></td>
					<td><%= @task.actual_time %></td>
					<td><%= @task.milestone %></td>
					<td><%= @task.running %></td>
				</tr>
			</tbody>
		</table>
</div>

<!-- 
<%= link_to("Start", {:action => :run_stop, :id => @task}, :method => :put)%>
 -->
 <% if !@task.running %>
	<%= button_to 'Start', run_stop_project_task_path(:id => @task), :method => :put, :class => "btn btn-info" %>
<% else %>
	<%= button_to 'Stop', run_stop_project_task_path(:id => @task), :method => :put, :class => "btn btn-danger" %>
<% end %>