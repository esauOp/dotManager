
<div class="catalogo ">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @task_statuses.each do |task_status| %>
      <tr>
        <td><%= task_status.name %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <%= link_to 'Edit', edit_task_status_path(task_status), :class => "btn btn-info" %>
            <%= link_to 'Destroy', task_status, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => "btn btn-danger" %>
          </div>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'New Task priority', new_task_status_path, :class => "btn btn-info" %>
